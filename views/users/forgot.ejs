<%- include("../partials/header") %>
<div class="container">
  <form class="form-signin"action="/forgot" method="POST">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Forgot Password</h1>
    </div>

    <div class="form-label-group">
      <input type="email" id="inputEmail" class="form-control" name="email" placeholder="email" required autofocus>
      <label for="inputEmail">Email</label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">reset password
    </button>

    <p class="mt-3 mb-2 text-muted text-center"><a style="text-allign: center;" href="/login">go back</a></p>
  </form>
</div>
<%- include("../partials/footer") %>